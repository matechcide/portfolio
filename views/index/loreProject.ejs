<div class="w-full lg:min-h-full flex flex-col lg:flex-row">
    <div class="w-full lg:w-[15%] flex lg:flex-col border-[gray] border-b-[2px] lg:border-b-0 lg:border-r-[2px] lg:h-full pb-[10px] lg:pr-[10px] pt-[10px] justify-between lg:justify-start">
        <img class="aspect-auto w-[80px] lg:w-full" src="/public/files<%= rep.logo %>">
        <div class="flex flex-col mt-[10px] w-[40%] lg:w-full">
            <h1>Tag</h1>
            <div class="flex flex-row flex-wrap border-[1px] border-[gray] text-[10px]">
                <% for(const tag of rep.category){ %>
                    <div class="px-[5px] border-[1px] border-[gray] bg-[white] m-[2px]">
                        <%= tag %>
                    </div>
                <% } %>
            </div>
        </div>
        <div class="mt-[10px] flex lg:flex-row flex-col items-center justify-center">
            <h1 class="px-[5px]">Statut : </h1>
            <% if(rep.status == "en cours"){ %>
                <a class="bg-[green] text-[white] px-[5px]">en cours</a>
            <% }else if(rep.status == "en pause"){ %>
                <a class="bg-[gray] text-[white] px-[5px]">en pause</a>
            <% }else{ %>
                <a class="bg-[red] text-[white] px-[5px]">arrêter</a>
            <% } %>
        </div>
        <% if(rep.git != ""){ %>
            <h1 class="mt-[10px]">Dispo sur : <button class="bg-B border-A border-[2px] rounded-[5px] text-[white] px-[5px] transition hover:scale-[110%]" href="<%= rep.git %>">GIT</button></h1>
        <% } %>
    </div>

    <div class="w-full lg:w-[85%] flex flex-col justify-start items-center">
        <div class="border-A px-[20px]">
            <h1 class="text-[70px]"><%= rep.name %></h1>
        </div>
        <div class="flex flex-col justify-start items-start py-[10px] px-[20px]">
            <h1 class="text-[25px]">Introduction:</h1>
            <h1 class="break-all"><%= rep.intro %></h1>
        </div>
        <div class="w-full flex flex-col lg:flex-row justify-center items-center mt-[20px]">
            <div class="w-[45%]">
                <h1 class="text-[25px]">Définition de mon besoin:</h1>
                <ul class="list-inside">
                    <% for(const c of rep.cdc){ %>
                        <li class="list-disc"><%= c %></li>
                    <% } %>
                </ul>
            </div>
            <div class="w-full lg:w-[45%] aspect-video relative mt-[20px] h-[150px] lg:h-full lg:mt-0">
                <button class="absolute top-[30%] text-[50px] lg:left-[-25px] transition hover:scale-[110%]" onclick="let shower = document.getElementById('slideImage'); let lc = shower.firstElementChild; shower.removeChild(shower.firstElementChild); shower.appendChild(lc)"><</button>
                <button class="absolute text-[50px] top-[30%] right-0 lg:right-[-25px] transition hover:scale-[110%]" onclick="let shower = document.getElementById('slideImage'); let lc = shower.lastElementChild; shower.removeChild(shower.lastElementChild); shower.innerHTML = lc.outerHTML + shower.innerHTML">></button>
                <div id="slideImage" class="h-full overflow-hidden flex">
                    <% for(const img of rep.images){ %>
                        <img class="h-full ml-[50%] translate-x-[-50%] mr-[100%]" src="/public/files<%= img %>">
                    <% } %>
                </div>
            </div>
        </div>
        <div class="flex flex-col justify-start items-start py-[10px] px-[20px]">
            <h1 class="text-[25px]">Avancer:</h1>
            <h1 class="break-all"><%= rep.ccl %></h1>
        </div>
    </div>
</div>